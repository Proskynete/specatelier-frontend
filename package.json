{
  "name": "specatelier-frontend",
  "version": "1.0.0",
  "description": "SpectAtelier - Software para Arquitectos",
  "private": true,
  "engines": {
    "node": "12.10.0",
    "npm": "6.10.3"
  },
  "scripts": {
    "build:production": "webpack -p --mode production --env.NODE_ENV=production",
    "build:development": "webpack --color --mode development --env.NODE_ENV=development",
    "dev": "webpack-dev-server --mode development --env.NODE_ENV=development",
    "start": "node ./server.js",
    "heroku-postbuild": "npm run build:production",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "prettier:check": "prettier --check ./src/**/*.js",
    "prettier:format": "prettier --config .prettierrc --write ./src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Proskynete/specatelier-frontend.git"
  },
  "author": "Eduardo Alvarez <eduardo.a1993@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Proskynete/specatelier-frontend/issues"
  },
  "homepage": "https://github.com/Proskynete/specatelier-frontend#readme",
  "devDependencies": {
    "babel-jest": "^24.9.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "jest": "^24.9.0",
    "prettier": "1.18.2",
    "react-test-renderer": "^16.10.1",
    "webpack-dev-server": "^3.8.1"
  },
  "dependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.6",
    "express": "^4.17.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "prop-types": "^15.7.2",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "webpack": "^4.41.0",
    "webpack-cli": "^3.3.9"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  }
}
